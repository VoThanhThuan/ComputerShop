        <Grid VerticalAlignment="Top"
              Margin="20,0,0,0">
            <Button x:Name="btn_AddOpen"
                    ToolTip="Thêm mới"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Top"
                    Width="140"
                    Margin="10,10,0,0"
                    Padding="0"
                    Height="47.7"
                    Click="btn_AddUser_Click"
                    Foreground="#FF00B9FF">
                <Grid Width="132"
                      Height="44">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="41*"></ColumnDefinition>
                        <ColumnDefinition Width="91*"></ColumnDefinition>
                    </Grid.ColumnDefinitions>
                    <materialDesign:PackIcon Kind="AccountMultiplePlus"
                                             Height="32"
                                             Width="32"
                                             VerticalAlignment="Center"
                                             HorizontalAlignment="Right"
                                             Margin="4,0,0,0" />
                    <TextBlock HorizontalAlignment="Center"
                               VerticalAlignment="Center"
                               FontSize="20"
                               Grid.Column="1"
                               Height="27">Thêm</TextBlock>
                </Grid>
            </Button>

            <Button x:Name="btn_AddEdit"
                    ToolTip="Sửa"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Top"
                    Width="140"
                    Margin="160,10,0,0"
                    Padding="0"
                    Foreground="#DD00FF46"
                    BorderBrush="{x:Null}"
                    Height="47.7"
                    Click="Btn_EditUser_OnClick">
                <Grid Width="132"
                      Height="44">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="41*"></ColumnDefinition>
                        <ColumnDefinition Width="91*"></ColumnDefinition>
                    </Grid.ColumnDefinitions>
