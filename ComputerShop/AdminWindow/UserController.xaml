                               FontSize="20"
                               Grid.Column="1"
                               Height="27">Sửa</TextBlock>
                </Grid>
            </Button>

            <Button x:Name="btn_AddRemove"
                    ToolTip="Xóa"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Top"
                    Width="140"
                    Padding="0"
                    Margin="310,10,0,0"
                    BorderBrush="{x:Null}"
                    Height="47.7"
                    Click="Btn_AddRemove_OnClick"
                    Foreground="#FFFF4F4F">
