<Window xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DesignLogin"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:gif="http://wpfanimatedgif.codeplex.com"
        x:Class="DesignLogin.LoginWindow"
        mc:Ignorable="d"
        Title="LoginWindow"
        Height="440"
        Width="730"
        AllowsTransparency="True"
        WindowStyle="None"
        WindowStartupLocation="CenterScreen"
        MouseLeftButtonDown="Window_MouseLeftButtonDown">
    <Window.Background>
        <ImageBrush x:Name="imgBackground"
                    ImageSource="/Login/WallpaperVTT.png" />
    </Window.Background>
    <Grid>
        <Label x:Name="label"
               HorizontalAlignment="Left"
               Height="421"
               Margin="342,0,0,0"
               VerticalAlignment="Center"
               Width="388">
        </Label>
        <Grid Margin="0, 0, 388, -1"
              Background="#CCFFFFFF">
            <Label x:Name="label1"
                   Content="Login"
                   HorizontalAlignment="Left"
                   Height="43.5"
                   Margin="44.5,46.5,0,0"
                   VerticalAlignment="Top"
                   Width="153.5"
                   FontSize="22"
                   FontWeight="Bold" />
            <Label x:Name="label2"
                   Content="Chào mừng bạn trở lại, đăng nhập bằng tài khoản của bạn "
                   HorizontalAlignment="Left"
                   Height="25"
                   Margin="44.5,83,0,0"
                   VerticalAlignment="Top"
                   Width="273.5" />
            <Label x:Name="label3"
                   Content=""
                   HorizontalAlignment="Left"
                   Height="4"
                   Margin="49.833,111,0,0"
                   VerticalAlignment="Top"
                   Width="44.5"
                   Background="#FF4346D3" />
            <Grid Grid.Row="2"
                  HorizontalAlignment="Left"
                  Height="39"
                  Margin="49.833,157.5,0,0"
                  VerticalAlignment="Top"
                  Width="233.167">
                <StackPanel Orientation="Horizontal"
                            HorizontalAlignment="Left"
                            Height="39"
                            Margin="-1.333,0,0,0"
                            VerticalAlignment="Top"
                            Width="234.5" />
                <materialDesign:PackIcon Kind="Account"
                                         Width="20"
                                         Height="20"
                                         Foreground="{Binding ElementName=txt_Usuario,Path=BorderBrush}"
                                         VerticalAlignment="Bottom"
                                         Margin="0 0"></materialDesign:PackIcon>
                <TextBox x:Name="tbx_UserName"
                         materialDesign:HintAssist.Hint="User Name"
                         Style="{StaticResource MaterialDesignFloatingHintTextBox}"
                         Margin="25,0,0,0"
                         CaretBrush="#FF2B5BEB"
                         BorderBrush="#FF696FD0" />


            </Grid>

            <Grid  HorizontalAlignment="Left"
                   Height="39"
                   Margin="49.833,211.527,0,0"
                   VerticalAlignment="Top"
                   Width="233.167">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="200*" />
                    <ColumnDefinition Width="33*" />
                </Grid.ColumnDefinitions>
                <StackPanel Orientation="Horizontal"
                            HorizontalAlignment="Left"
                            Height="39"
                            Margin="-1.333,0,0,0"
                            VerticalAlignment="Top"
                            Width="234.5"
                            Grid.ColumnSpan="2" />
                <materialDesign:PackIcon Grid.Column="0"
                                         Kind="Key"
                                         Width="20"
                                         Height="20"
                                         Foreground="{Binding ElementName=txt_Password,Path=BorderBrush}"
                                         VerticalAlignment="Bottom"
                                         Margin="0 0"></materialDesign:PackIcon>
                <PasswordBox   x:Name="tbx_Password"
                               materialDesign:HintAssist.Hint="Password"
                               Style="{StaticResource MaterialDesignFloatingHintPasswordBox}"
                               Grid.ColumnSpan="2"
                               Grid.Column="0"
                               Margin="25,0,0,0"
                               CaretBrush="#FF2B5BEB"
                               BorderBrush="#FF696FD0" />
            </Grid>


            <ToggleButton Style="{StaticResource MaterialDesignActionToggleButton}"
                          ToolTip="MaterialDesignActionLightToggleButton"
                          Margin="72,376,238,13"
                          Background="#FF2437B0">
                <ToggleButton.Content>
                    <materialDesign:PackIcon Kind="Facebook" />
                </ToggleButton.Content>
                <materialDesign:ToggleButtonAssist.OnContent>
                    <materialDesign:PackIcon Kind="EmoticonHappy" />
                </materialDesign:ToggleButtonAssist.OnContent>
            </ToggleButton>
            <ToggleButton Style="{StaticResource MaterialDesignActionToggleButton}"
                          ToolTip="MaterialDesignActionLightToggleButton"
                          Margin="149,376,161,13"
                          Background="#FFB73A3A">
                <materialDesign:ToggleButtonAssist.OnContent>
                    <materialDesign:PackIcon Kind="EmoticonHappy" />
                </materialDesign:ToggleButtonAssist.OnContent>
                <materialDesign:PackIcon Kind="Google" />
            </ToggleButton>
            <ToggleButton Style="{StaticResource MaterialDesignActionToggleButton}"
                          ToolTip="MaterialDesignActionLightToggleButton"
                          Margin="224,376,86,13"
                          Background="#FF3A5CB7">
                <materialDesign:ToggleButtonAssist.OnContent>
                    <materialDesign:PackIcon Kind="EmoticonHappy" />
                </materialDesign:ToggleButtonAssist.OnContent>
                <materialDesign:PackIcon Kind="Linkedin" />
            </ToggleButton>

        </Grid>

        <RepeatButton ToolTip="chưa biết để gì"
                      Margin="371.5,10,249.5,378"
                      Background="Transparent"
                      BorderBrush="Transparent"
                      Content="MÃ NGUỒN " />
        <RepeatButton ToolTip="GitHub :v"
                      Margin="485.5,10,135.5,378"
                      Background="Transparent"
                      BorderBrush="Transparent"
                      Content="PORNHUB" />
        <RepeatButton ToolTip="Giới thiệu về thành viên nhớm"
                      Margin="594,10,27,378"
                      Background="Transparent"
                      BorderBrush="Transparent"
                      Content="GIỚI THIỆU" />


        <ToggleButton x:Name="btn_Close"
                      Style="{StaticResource MaterialDesignFlatToggleButton}"
                      ToolTip="Thoát chương trình"
                      Margin="690,0,0,400"
                      Height="Auto"
                      Width="Auto"
                      Checked="btn_Close_Checked">
            <materialDesign:PackIcon Kind="Close"
                                     Height="15"
                                     Width="15"
                                     Foreground="White" />
        </ToggleButton>
        <CheckBox x:Name="cbx_RememberLogin"
                  Style="{StaticResource MaterialDesignCheckBox}"
                  Margin="73.833,263.045,544,131.205"
                  Content="Ghi nhớ đăng nhập"
                  BorderBrush="#FFBCBCBC"
                  Foreground="#FFBCBCBC"
                  FontWeight="Bold"
                  FontSize="9"
                  RenderTransformOrigin="0.428,0.618" />

        <Button Style="{StaticResource MaterialDesignFlatButton}"
                ToolTip="Bạn đã quên mật khẩu ?"
                Margin="186,265.75,0,130.25"
                Height="24"
                Content="Quên mật khẩu"
                FontSize="7"
                FontWeight="Bold"
                HorizontalAlignment="Left"
                Width="109" />
        <RepeatButton x:Name="btn_Login"
                      ToolTip="Đăng nhập"
                      Margin="114,303,502,85"
                      Background="#FF2B5BEB"
                      BorderBrush="Transparent"
                      Content="Login"
                      Click="BtnLogin_Click" />
        <Label x:Name="label1_Copy"
               Content="Hoặc đăng nhập bằng:"
               HorizontalAlignment="Left"
               Height="23"
               Margin="50,349,0,0"
               VerticalAlignment="Top"
               Width="153"
               FontWeight="Bold" />



    </Grid>
</Window>
