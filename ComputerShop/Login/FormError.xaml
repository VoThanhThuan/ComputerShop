<Window xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DesignLogin"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        x:Class="DesignLogin.FormError"
        mc:Ignorable="d"
        Title="FormError"
        Height="148"
        Width="367.2"
        WindowStyle="None"
        AllowsTransparency="True"
        WindowStartupLocation="CenterScreen">
    <Grid>
        <materialDesign:ColorZone Mode="PrimaryMid"
                                  Padding="16"
                                  Height="40"
                                  Background="#FFCF4A56">
            <Label x:Name="lbl_Title"
                   Content="Lỗi đăng nhập"
                   HorizontalAlignment="Center"
                   Height="34"
                   Margin="0,-14,0,-12"
                   VerticalAlignment="Top"
                   Width="auto"
                   Foreground="#DDFFFFFF"
                   FontSize="16" />
        </materialDesign:ColorZone>
        <Label x:Name="lbl_Messege"
               Content="Tài khoản không tồn tại."
               HorizontalAlignment="Left"
               Height="36"
               Margin="7,45,0,0"
               VerticalAlignment="Top"
               Width="355"
               FontSize="18"
               FontWeight="Bold" />
        <Label x:Name="lbl_Username"
               Content="xx"
               HorizontalAlignment="Left"
               Height="36"
               Margin="70,81,0,0"
               VerticalAlignment="Top"
               Width="214"
               FontWeight="Bold" />

        <ToggleButton x:Name="btn_Close"
                      Style="{StaticResource MaterialDesignFlatToggleButton}"
                      ToolTip="MaterialDesignFlatToggleButton"
                      Margin="327,0,0,108"
                      Height="Auto"
                      Width="Auto"
                      Checked="btn_Close_Checked">
            <materialDesign:PackIcon Kind="Close"
                                     Height="15"
                                     Width="15"
                                     Foreground="White" />
        </ToggleButton>


    </Grid>
</Window>
